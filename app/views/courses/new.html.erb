<div class="page-header">
  <h1>Add Course</h1>
</div>

<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_course" class="form-horizontal">
  <!-- Label and input for school_course_id -->
  <div class="form-group">
    <label for="school_course_id" class="col-sm-2 control-label">
      School course
    </label>
    <div class="col-sm-10">
      <input type="text" id="school_course_id" name="school_course_id" placeholder="School course" class="form-control" value="<%= @course.school_course_id %>">
    </div>
  </div>

  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">
      Title
    </label>
    <div class="col-sm-10">
      <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @course.title %>">
    </div>
  </div>

  <!-- Label and input for status -->
  <div class="form-group">
    <label for="status" class="col-sm-2 control-label">
      Status
    </label>
    <div class="col-sm-10">
      <input type="text" id="status" name="status" placeholder="Status" class="form-control" value="<%= @course.status %>">
    </div>
  </div>

  <!-- Label and input for effective_start_quarter_id -->
  <div class="form-group">
    <label for="effective_start_quarter_id" class="col-sm-2 control-label">
      Effective start quarter
    </label>
    <div class="col-sm-10">
      <input type="text" id="effective_start_quarter_id" name="effective_start_quarter_id" placeholder="Effective start quarter" class="form-control" value="<%= @course.effective_start_quarter_id %>">
    </div>
  </div>

  <!-- Label and input for effective_end_quarter_id -->
  <div class="form-group">
    <label for="effective_end_quarter_id" class="col-sm-2 control-label">
      Effective end quarter
    </label>
    <div class="col-sm-10">
      <input type="text" id="effective_end_quarter_id" name="effective_end_quarter_id" placeholder="Effective end quarter" class="form-control" value="<%= @course.effective_end_quarter_id %>">
    </div>
  </div>

  <!-- Label and input for school_url -->
  <div class="form-group">
    <label for="school_url" class="col-sm-2 control-label">
      School url
    </label>
    <div class="col-sm-10">
      <input type="text" id="school_url" name="school_url" placeholder="School url" class="form-control" value="<%= @course.school_url %>">
    </div>
  </div>

  <!-- Label and input for credits -->
  <div class="form-group">
    <label for="credits" class="col-sm-2 control-label">
      Credits
    </label>
    <div class="col-sm-10">
      <input type="text" id="credits" name="credits" placeholder="Credits" class="form-control" value="<%= @course.credits %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Course" class="btn btn-primary">
    </div>
  </div>
</form>
