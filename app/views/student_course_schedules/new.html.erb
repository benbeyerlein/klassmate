<div class="page-header">
  <h1>Add Student Course Schedule</h1>
</div>

<% if @student_course_schedule.errors.any? %>
  <% @student_course_schedule.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_student_course_schedule" class="form-horizontal">
  <!-- Label and input for student_id -->
  <div class="form-group">
    <label for="student_id" class="col-sm-2 control-label">
      Student
    </label>
    <div class="col-sm-10">
      <input type="text" id="student_id" name="student_id" placeholder="Student" class="form-control" value="<%= @student_course_schedule.student_id %>">
    </div>
  </div>

  <!-- Label and input for course_schedule_id -->
  <div class="form-group">
    <label for="course_schedule_id" class="col-sm-2 control-label">
      Course schedule
    </label>
    <div class="col-sm-10">
      <input type="text" id="course_schedule_id" name="course_schedule_id" placeholder="Course schedule" class="form-control" value="<%= @student_course_schedule.course_schedule_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Student Course Schedule" class="btn btn-primary">
    </div>
  </div>
</form>
